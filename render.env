# Configuración específica para Render.com
# Este archivo ayuda a resolver problemas de carga de módulos JavaScript

# Configuración del servidor para Render
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Configuración adicional para mejorar compatibilidad con CDN
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200
STREAMLIT_SERVER_ENABLE_WEBSOCKET_COMPRESSION=false
STREAMLIT_SERVER_RUN_ON_SAVE=false
STREAMLIT_SERVER_ALLOW_RUN_ON_SAVE=false

# Configuración del cliente para optimizar carga
STREAMLIT_CLIENT_TOOLBAR_MODE=minimal
STREAMLIT_CLIENT_SHOW_SIDEBAR_NAVIGATION=false

# Configuración global
STREAMLIT_GLOBAL_DEVELOPMENT_MODE=false
STREAMLIT_GLOBAL_SHOW_WARNING_ON_DIRECT_EXECUTION=false

# Puerto dinámico para Render
PORT=8501
